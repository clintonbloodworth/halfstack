{
  "devDependencies": {
    "chokidar-": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "per-env": "^1.0.2",
    "prettier": "^2.2.1",
    "serve": "^11.3.2",
    "tailwindcss-cli": "^0.1.2"
  },
  "scripts": {
    "build": "per-env",
    "build:development": "chokidar tailwind.config.js files/public/index.html --command 'npm run tailwind' --initial",
    "build:production": "npm run tailwind",
    "format": "per-env",
    "format:development": "chokidar '**/*.*' --command 'prettier --write {path}' --ignore '.git'  --ignore 'node_modules' --initial",
    "format:production": "prettier --write .",
    "serve": "serve files/public",
    "start": "per-env",
    "start:development": "npm-run-all --parallel --print-label --silent format build serve",
    "start:production": "npm-run-all format build",
    "tailwind": "tailwindcss-cli build -o files/public/styles.css files/public/index.html"
  }
}
